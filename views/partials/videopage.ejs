<link rel="stylesheet" href="./partials/css/videopage.css">
<script src="./js/htmx.js"></script>

<div id="videopage" class="container play-container">

    <div class="row">
        <div class="video-player">
            <div class="player">
                <iframe src="https://www.youtube.com/embed/<%=video.id%>?autoplay=1&rel=0" frameborder="0" allowfullscreen></iframe>
            </div>

            <h3 class="video-title"><%=video.snippet.title%></h3>

            <div class="video-info">

                        
      <%  let views = (video.statistics.viewCount/1000000).toFixed(1); %>
      <%  if(views > 10) views = Math.trunc(views); %>
      <%  if(views > 1) views = views + 'M'; %>
      <%  if(views <= 1) views = (video.statistics.viewCount/1000).toFixed(1) + 'K'; %>
      <%  let likes = (video.statistics.likeCount/1000000).toFixed(1); %>
      <%  if(likes > 10) likes = Math.trunc(likes); %>
      <%  if(likes > 1) likes = likes + 'M'; %>
      <%  if(likes <= 1) likes = (video.statistics.likeCount/1000).toFixed(1) + 'K'; %>

                <p class="views"><%=views%> Views &bull; 2 days ago</p>
                <div class="buttons" id="buttons">

                    <% if(rating.data.items[0].rating === "like"){ %>

                        <a id="like" class="rating" hx-get="/like?value=false&videoId=<%=video.id%>&likes=<%=likes%>" hx-target="#buttons" hx-swap="outerHTML" >
                            <img src="./images/liked.png">

                    <%}else{%>

                        <a id="like" class="rating" hx-get="/like?value=true&videoId=<%=video.id%>&likes=<%=likes%>" hx-target="#buttons" hx-swap="outerHTML" >
                            <img src="./images/like.png">

                    <%}%>

                        <%=likes%>
                    </a>
                    
                    
                    <% if(rating.data.items[0].rating === "dislike"){ %>
                        <a  id="dislike" class="rating" hx-get="/like/dislike?value=false&videoId=<%=video.id%>&likes=<%=likes%>" hx-target="#buttons" hx-swap="outerHTML" >
                            <img src="./images/disliked.png">
                    <%}else{%>
                        <a  id="dislike" class="rating" hx-get="/like/dislike?value=true&videoId=<%=video.id%>&likes=<%=likes%>" hx-target="#buttons" hx-swap="outerHTML" >
                            <img src="./images/dislike.png">
                    <%}%>
                    
                        </a>
                    
                    <a href="#" id="share"><img src="./images/share.png">Share</a>
                    <a href="#" id="save"><img src="./images/download.png">Download</a>

                </div>
            </div>
            <hr>

        <%  let subscribers = (channel.statistics.subscriberCount/1000000).toFixed(1); %>
      <%  if(subscribers > 10) subscribers = Math.trunc(subscribers); %>
      <%  if(subscribers > 1) subscribers = subscribers + 'M'; %>
      <%  if(subscribers <= 1) subscribers = (channel.statistics.subscriberCount/1000).toFixed(1) + 'K'; %>

            <div class="channelinfo">
            <a href="/channelpage?c=<%=channel.id%>">    <img src=<%=channel.snippet.thumbnails.medium.url%> alt=""> </a>

                <div class="channel-details">
                 <a href="/channelpage?c=<%=channel.id%>">   <p><%=channel.snippet.title%></p> </a>
                    <span><%=subscribers%> Subscribers</span>
                </div>
                <%if(isSubscribed > 0){%>
                <button 
                        hx-get = "/subscribe?subid=<%=sub_id%>&value=false&c=<%=channel.id%>"
                        hx-swap = "outerHTML"
                        type="button" id="subscribed">Subscribed
                </button>
                <%}else{%>
                    <button  hx-get = "/subscribe?c=<%=channel.id%>&value=true"
                            hx-swap = "outerHTML"
                             type="button">Subscribe
                    </button> 
                <%}%>

            </div>

            <div class="vid-description">

                <p><%-video.snippet.description%></p>
                                  <hr>

              <h4><%=video.statistics.commentCount %> Comments</h4>

              <form action="#" method="post" class="add-comment">
                <img src=<%=profile.photos[0].value%>>
                <input type="text" name="commenttoadd" id="commenttoadd" placeholder="Write comments...">
              </form>

        <div class="comments">



        <% for(let i = 0 ; i < comments.length ; i++){ %>

        <% let authorImage = comments[i].snippet.topLevelComment.snippet.authorProfileImageUrl %>
        <% let authorName =  comments[i].snippet.topLevelComment.snippet.authorDisplayName%>
        <% let authorChannel = "/channelpage?c=" + comments[i].snippet.topLevelComment.snippet.authorChannelId.value%>

        <% let comment = comments[i].snippet.topLevelComment.snippet.textOriginal%>
        <% let likes = comments[i].snippet.topLevelComment.snippet.likeCount%>

            <div class="commentsection">
              <a href=<%=authorChannel%>>  <img src=<%=authorImage%>> </a>
                <div class="person-details">
                    <a href=<%=authorChannel%>> <h3><%=authorName%> <span>2 days ago</span></h3> </a>
                    <p class="person-comment"> <%=comment%></p>

                    <div class="comment-actions">
                        <img src="./images/like.png">
                        <span><%=likes%></span>
                        <img src="./images/dislike.png">
                    </div>

                </div>

            </div>

        <%}%>

        </div>
        </div>
        </div>

        <div class="right-sidebar">

            <% for(let i = 0 ; i < relatedvideos.items.length ; i++){ %>


            <div class="side-video-list">
                <% let link = '/videopage?v=' +  relatedvideos.items[i].id.videoId  + '&c=' +  relatedvideos.items[i].snippet.channelId  %>
                <% let thumbnail = relatedvideos.items[i].snippet.thumbnails.medium.url %>
                <% let videoTitle = relatedvideos.items[i].snippet.title %>
                <% let channelTitle = relatedvideos.items[i].snippet.channelTitle %>

                <a href=<%=link%> class="small-thumbnail"> <img src=<%=thumbnail%>> </a>
                <div class="vid-info">
                    <a href=<%=link%> class="title"><%=videoTitle%></a>
                    <p class="channel"><%=channelTitle%></p>
                    <p class="views">15k views</p>
                </div>

            
            </div>

            <%}%>

        </div>

    </div>

</div>

<script>

   let sidebar = document.querySelector('.sidebar');

   document.addEventListener("DOMContentLoaded",()=>{
    sidebar.classList.toggle('small-sidebar');
    document.querySelector('.sidebar .shortcut-links').classList.toggle('large-padding');
    document.querySelector('.sidebar .subscribed-list').classList.toggle('large-padding');
   })

   let menuIcon = document.querySelector('.menu-icon');

    menuIcon.addEventListener('click',()=>{
        sidebar.classList.toggle('small-sidebar');
        document.querySelector('.sidebar .shortcut-links').classList.toggle('large-padding');
        document.querySelector('.sidebar .subscribed-list').classList.toggle('large-padding');
    });

</script>
