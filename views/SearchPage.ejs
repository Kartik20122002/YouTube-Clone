<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name = "theme-color" content="red">
    <link rel="manifest" href="manifest.json">
    <link rel="apple-touch-icon" href="./images/Icons/192x192.png">
    <link rel="shortcut icon" href="https://www.youtube.com/s/desktop/451d4225/img/favicon.ico" type="image/x-icon">
    <link rel="icon" href="https://www.youtube.com/s/desktop/451d4225/img/favicon_96x96.png" sizes="96x96">
    <title>YouTube Lite - SearchPage</title>
     <link rel="stylesheet" href="./css/HomePage.css">
     <style>
        /* width */
        ::-webkit-scrollbar {
          width: 10px;
        }
        
        /* Track */
        ::-webkit-scrollbar-track {
          background: #f1f1f17d; 
        }
         
        /* Handle */
        ::-webkit-scrollbar-thumb {
          background: rgba(136, 136, 136, 0.541); 
          border-radius : 10px;
        }
        
        /* Handle on hover */
        ::-webkit-scrollbar-thumb:hover {
          background: #555;
          opacity: 1;
        }
        </style>
</head>
<body>

    <%- include('partials/nav.ejs') %>
    
    <%- include('partials/sidebar.ejs') %>
    
    <%- include('partials/searchpage.ejs') %>
    
    <%- include('partials/bottommenu.ejs') %>


<script>
  let menuIcon = document.querySelector('.menu-icon');
    let sidebar = document.querySelector('.sidebar');
    let mainpage = document.querySelector('#mainpage');

    menuIcon.addEventListener('click',()=>{
        sidebar.classList.toggle('small-sidebar');
        document.querySelector('.sidebar .shortcut-links').classList.toggle('large-padding');
        document.querySelector('.sidebar .subscribed-list').classList.toggle('large-padding');
        mainpage.classList.toggle('larger-container')
    });
</script>

<script src="https://kit.fontawesome.com/57a3e51741.js" crossorigin="anonymous"></script>
</body>
</html>